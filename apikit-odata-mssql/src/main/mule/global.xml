<?xml version="1.0" encoding="UTF-8"?>
<mule
    xmlns="http://www.mulesoft.org/schema/mule/core"
    xmlns:db="http://www.mulesoft.org/schema/mule/db"
    xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
    xmlns:http="http://www.mulesoft.org/schema/mule/http"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
http://www.mulesoft.org/schema/mule/db http://www.mulesoft.org/schema/mule/db/current/mule-db.xsd 
http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd">
    <configuration-properties
        doc:name="Configuration properties"
        doc:id="05cfb8e0-ed61-4749-8b08-5ce8eb55403e"
        file="mule-configuration.properties" />
    <db:config
        name="api-database-config"
        doc:name="Database Config"
        doc:id="aec65575-b555-4d64-864f-30972ed27893">
        <db:mssql-connection host="${ds.db.host}" port="${ds.db.port}" user="${ds.db.user}" password="${ds.db.password}" databaseName="${ds.db.database}"/>
    </db:config>
    <db:config
        name="api-database-config-mysql"
        doc:name="Database Config"
        doc:id="cfb21c27-2e7e-451e-820b-96204a192871">
        <db:my-sql-connection
            host="${ds.db.host}"
            port="${ds.db.port}"
            user="${ds.db.user}"
            password="${ds.db.password}"
            database="${ds.db.database}" />
    </db:config>
    <http:listener-config name="api-http-listener-config">
        <http:listener-connection
            host="0.0.0.0"
            port="8081" />
    </http:listener-config>
</mule>
